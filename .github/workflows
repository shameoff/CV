name: Auto Deploy

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: checkRepo
      uses: actions/checkout@v2

    - name: Pull Changes
      uses: appleboy/ssh-action@v0.1.10
      with:
        username: ${{ secrets.REMOTE_USER }}
        key: ${{ secrets.ACTOR_PRIVATE_KEY }}
        host: ${{ secrets.REMOTE_HOST }}
        port: ${{ secrets.REMOTE_PORT }}
        script: cd /projects/my_CV && git pull

    - name: Build with pandoc
          uses: appleboy/ssh-action@v0.1.10
          with:
            username: ${{ secrets.REMOTE_USER }}
            key: ${{ secrets.ACTOR_PRIVATE_KEY }}
            host: ${{ secrets.REMOTE_HOST }}
            port: ${{ secrets.REMOTE_PORT }}
            script: pandoc -o index.html README.md --template=template.html \
                ; pandoc -o temp.html README.md \
                && pandoc --pdf-engine=xelatex \
                        -V colorlinks=true \
                        -V linkcolor=blue \
                        -V urlcolor=blue \
                        -V toccolor=gray \
                        -V mainfont="DejaVu Sans" \
                        --listings temp.html -o cv.pdf \
                        --css=./css/bootstrap.min.css \
                        -V geometry:"left=1.5cm,right=1.5cm,top=2cm,bottom=2cm" && rm temp.html

